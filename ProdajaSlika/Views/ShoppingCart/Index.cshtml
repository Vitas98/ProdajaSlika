@model ProdajaSlika.ViewModels.ShoppingCartViewModel
@{
    // Postavi kulturu na srpski
    System.Globalization.CultureInfo culture = new System.Globalization.CultureInfo("sr-RS");
    System.Threading.Thread.CurrentThread.CurrentCulture = culture;
    System.Threading.Thread.CurrentThread.CurrentUICulture = culture;
}
<div style="background-color: cornflowerblue;">
    <h2 style="border: 2px solid lightblue;">Izabrane slike</h2>
</div>
<h4>Slike izuzetnog kvaliteta su na korak od Vas!</h4>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Slika</th>
            <th>Cena</th>
            <th class="text-right">Količina</th>
            <th class="text-right">Vrednost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-left">@item.Picture.Name</td>
                <td class="text-right">@item.Picture.Price.ToString("c")</td>
                <td class="text-center">@item.Amount</td>
                <td class="text-right">@((item.Amount * item.Picture.Price).ToString("c"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Ukupno</td>
            <td class="text-right">@Model.TotalPrice.ToString("c")</td>
        </tr>
    </tfoot>
</table>

<div class="text-center">
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Poručite odmah!</a>
</div>