@model Picture

<div style="background-color: cornflowerblue;">
    <h1 style="border: 2px solid lightblue;">Izmena slike</h1>
</div>

<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Naziv</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Cena</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="ImageUrl" />
    <input type="hidden" asp-for="Description" />
    <input type="hidden" asp-for="IsSpecialOffer" />
    <input type="hidden" asp-for="CanvasTypeId" />
    <input type="hidden" asp-for="CanvasType" />
    <input type="hidden" asp-for="FrameTypeId" />
    <input type="hidden" asp-for="FrameType" />
    <input type="hidden" asp-for="PictureHeight" />
    <input type="hidden" asp-for="PictureWidth" />
    <input type="hidden" asp-for="CategoryId" />
    <input type="hidden" asp-for="Category" />
    <div class="gap" style="line-height: 20px; height: 20px;"></div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Sačuvaj izmene</button>
    </div>
</form>