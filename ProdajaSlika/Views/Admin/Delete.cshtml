@model int


<div style="background-color: cornflowerblue;">
    <h1 style="border: 2px solid lightblue;">Potvrdite brisanje slike</h1>
</div>

<p>Da li zaista želite da obrišete sliku sa ID-om @Model?</p>

<form asp-action="DeleteConfirmed" asp-route-id="@Model" method="post">
    <button type="submit" class="btn btn-danger">Obriši</button>
    <a asp-action="Index" class="btn btn-secondary">Odustani</a>
</form>